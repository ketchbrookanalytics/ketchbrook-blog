{
  "name": "Ketchbrook Analytics Blog",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    // Install Quarto CLI
		// More info: https://github.com/rocker-org/devcontainer-features/tree/main/src/quarto-cli
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},

    // Configure R on Ubuntu
		// More info: https://github.com/rocker-org/devcontainer-features/tree/main/src/r-apt.
		"ghcr.io/rocker-org/devcontainer-features/r-apt:latest": {},

		// Install additional R package dependencies
		// Note: httpgd has been archived on CRAN as of 2025-04-23, see
		// https://cran.r-project.org/web/packages/httpgd/index.html
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "downlit, dplyr, echarts4r, github::nx10/httpgd, jsonlite, knitr, languageserver, rmarkdown, tibble, xml2",
			"installSystemRequirements": true
		}
  },

  // Wait to install R packages until R is installed.
  // More info: https://github.com/rocker-org/devcontainer-features/tree/main/src/apt-packages#installation-order
	"overrideFeatureInstallOrder": [
		"ghcr.io/rocker-org/devcontainer-features/r-apt"
	],

  "customizations": {
    "vscode": {
      "settings": {
				"editor.rulers": [80],
	    		"[r]": {
    			    "editor.formatOnSave": true,
    			    "editor.defaultFormatter": "Posit.air-vscode"
    			},
    			"[quarto]": {
    			    "editor.formatOnSave": true,
    			    "editor.defaultFormatter": "quarto.quarto"
    			}
			},
      "extensions": [
        "quarto.quarto",
        "Posit.air-vscode"
      ]
    }
  }
}
